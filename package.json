{
	"name": "kopolo-website",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.8.0",
		"react-router-dom": "^6.11.0",
		"react-scroll": "^1.8.9",
		"tailwind-scrollbar-hide": "^1.1.7"
	},
	"scripts": {
		"dev": "vite --port 3000 --open --host",
		"build": "vite build",
		"preview": "vite preview --port 3001 --open --host",
		"lint": "eslint . --ext .{js,js,ts,tsx,cjs}",
		"lint:fix": "eslint ./src --ext .{js,js,ts,tsx,cjs} --fix",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"prepare": "husky install",
		"format": "prettier --write ./src",
		"ensure": "npm run lint && npm run lint:fix && npm run format && npm run build  && git add ."
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@tailwindcss/forms": "^0.5.3",
		"@types/node": "^18.16.3",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@vitejs/plugin-react-swc": "^3.0.0",
		"@vitest/ui": "^0.28.5",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.39.0",
		"eslint-plugin-react": "^7.32.2",
		"happy-dom": "^8.2.3",
		"husky": "^8.0.3",
		"jsdom": "^21.1.0",
		"postcss": "^8.4.23",
		"prettier": "2.8.3",
		"tailwindcss": "^3.3.2",
		"typescript": "^4.9.5",
		"vite": "^4.3.4",
		"vitest": "^0.28.5"
	}
}
